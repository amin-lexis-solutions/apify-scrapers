# Schedule actors every 30 minutes we change interval to 30 minutes based on total actors / concurrency limit (5)
*/30 * * * * root cd /app/packages/api && yarn schedule:actors

# Schedule SERP finding every 10 minutes from midnight to 8 AM on Mondays and Thursdays
*/10 0-8 * * 1,4 root cd /app/packages/api && yarn schedule:find-serp

# Run specific SERP finding tasks once a week on Mondays
# 0 0 * * 1 root cd /app/packages/api && yarn schedule:find-serp-for-custom-malaysian-domains
# 0 0 * * 1 root cd /app/packages/api && yarn schedule:find-serp-for-custom-ch-domains
# 0 0 * * 1 root cd /app/packages/api && yarn schedule:find-serp-for-cuponation-domains

# Run tests every Monday
*/10 * * * 1 root cd /app/packages/api && yarn schedule:tests

# Cleanup old data daily at 4:30 AM
30 4 * * * root cd /app/packages/api && yarn schedule:periodic-coupons-cleanup

# Sync Merchant data every 6 hours
0 0,6,12,18 * * * root cd /app/packages/api && yarn scripts:sync-merchants-data
